{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",

  "name": "${mod_name}",
  "description": "Adds elements of the Ninjago franchise into Minecraft",
  "authors": [
    "${mod_author}"
  ],
  "contributors": [
    "waifu_png_pl",
    "Comerciante",
    "Tir-Far-Thoinn",
    "Watommeeeeeeeeee",
    "Albert_1403",
    "ChippiHeppu",
    "Tslat"
  ],
  "contact": {
    "homepage": "https://github.com/thomasglasser/Minejago",
    "sources": "https://github.com/thomasglasser/Minejago",
    "issues": "https://github.com/thomasglasser/Minejago/issues"
  },

  "license": "${license}",
  "icon": "assets/${mod_id}/logo_1.0.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.thomasglasser.minejago.MinejagoFabric"
    ],
    "client": [
      "dev.thomasglasser.minejago.client.MinejagoFabricClient"
    ],
    "cardinal-components": [
      "dev.thomasglasser.minejago.world.level.storage.MinejagoFabricEntityComponents"
    ],
    "jade": [
      "dev.thomasglasser.minejago.client.MinejagoWailaPlugin"
    ],
    "rei_client": [
      "dev.thomasglasser.minejago.client.rei.MinejagoREIClientPlugin"
    ],
    "dynamiclights": [
      "dev.thomasglasser.minejago.client.MinejagoDynamicLightsInitializer"
    ]
  },
  "mixins": [
    "${mod_id}_fabric.mixins.json",
    "${mod_id}_common.mixins.json"
  ],

  "accessWidener" : "${mod_id}.accesswidener",

  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_version}",
    "minecraft": ">=${minecraft_version}",
    "cardinal-components-base": ">=${cca_version}",
    "cardinal-components-entity": ">=${cca_version}",
    "smartbrainlib": ">=${sbl_version}",
    "geckolib": ">=${geckolib_version}",
    "sherdsapi": ">=${sherdsapi_version}"
  },
  "recommends": {
    "trimmed": ">=${trimmed_version}",
    "reach-entity-attributes": ">=${reachentityattributes_version}",
    "moonlight": ">=${moonlight_version}"
  },
  "suggests": {
    "player-animator": ">=${playeranimator_version}",
    "lambdynamiclights": ">=${lambdynamiclights_version}",
    "firstpersonmod": "*",
    "modmenu": "*",
    "tslatentitystatus": ">=${tes_version}",
    "jade": ">=${jade_version}"
  },

  "custom": {
    "cardinal-components": [
      "${mod_id}:power",
      "${mod_id}:spinjitzu",
      "${mod_id}:focus"
    ],
    "mc-publish": {
      "loaders": ["fabric", "quilt"]
    }
  }
}